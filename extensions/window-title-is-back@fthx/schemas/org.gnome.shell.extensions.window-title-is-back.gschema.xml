    <key type="b" name="show-icon">
        <default>true</default>
        <summary>Show the focused app icon</summary>
    </key>

    <key type="b" name="show-app">
        <default>true</default>
        <summary>Show the focused app name</summary>
    </key>

    <key type="b" name="show-title">
        <default>true</default>
        <summary>Show the focused window title</summary>
    </key>

    <key type="b" name="colored-icon">
        <default>false</default>
        <summary>Colored icon</summary>
    </key>

    <key type="b" name="fixed-width">
        <default>true</default>
        <summary>Fixed width</summary>
    </key>


    <key type="i" name="indicator-width">
        <default>80</default>
        <summary>Indicator width</summary>
    </key>

    <key type="i" name="icon-size">
        <default>16</default>
        <summary>App icon size</summary>
    </key>

    <key type="i" name="ease-time">
        <default>150</default>
        <summary>Fade in/out time</summary>
    </key>

    </schema>
</schemalist>
